<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<StackPane styleClass="root-container" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.clientxo.LobbyScreenController">

    <padding>
        <Insets bottom="24" left="24" right="24" top="24" />
    </padding>

    <!-- Back Button (Top Left) -->
    <Button fx:id="btnBack" onAction="#onBack" styleClass="back-button" StackPane.alignment="TOP_LEFT">
        <graphic>
            <HBox alignment="CENTER_LEFT" spacing="8">
                <SVGPath content="M19 12H5M12 19l-7-7 7-7" styleClass="back-icon" />
                <Label styleClass="back-label" text="Back" />
            </HBox>
        </graphic>
    </Button>

    <!-- User Menu (Top Right) -->
    <HBox alignment="CENTER_RIGHT" spacing="10" StackPane.alignment="TOP_RIGHT">
         <StackPane styleClass="player-avatar" />
    </HBox>

    <!-- Main Content -->
    <VBox alignment="TOP_CENTER" maxWidth="600" spacing="24" StackPane.alignment="CENTER">
        <padding>
            <Insets top="60" /> 
        </padding>

        <!-- Header -->
        <VBox alignment="CENTER" spacing="8">
            <Label style="-fx-font-size: 36px;" styleClass="game-title" text="Game Lobby" />
            <Label style="-fx-font-size: 16px;" styleClass="game-subtitle" text="Find an opponent and start playing!" />
        </VBox>

        <!-- Players List Card -->
        <VBox styleClass="game-card" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            
                           <!-- Players Header -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <padding>
               <Insets bottom="16" />
            </padding>
                <SVGPath content="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2 M23 21v-2a4 4 0 0 0-3-3.87 M16 3.13a4 4 0 0 1 0 7.75" style="-fx-fill: #e94560;" styleClass="button-icon" />
                <Label fx:id="lblPlayersCount" style="-fx-font-size: 20px;" styleClass="input-label" text="Players (0)" />
            </HBox>

            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                <content>
                    <VBox spacing="16" style="-fx-background-color: transparent;">
                        
                        <!-- Online Players -->
                        <VBox spacing="8">
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z" style="-fx-scale-x: 0.5; -fx-scale-y: 0.5;" styleClass="status-indicator-online" />
                                <Label fx:id="lblOnlineCount" style="-fx-text-fill: #10b981; -fx-font-size: 14px;" styleClass="input-label" text="Online (0)" />
                            </HBox>
                            <VBox fx:id="onlinePlayersList" spacing="8" />
                        </VBox>

                        <!-- Offline Players -->
                        <VBox spacing="8">
                            <HBox alignment="CENTER_LEFT" spacing="8">
                                <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z" style="-fx-fill: #6b7280; -fx-scale-x: 0.5; -fx-scale-y: 0.5;" styleClass="status-indicator-offline" />
                                <Label fx:id="lblOfflineCount" style="-fx-text-fill: #6b7280; -fx-font-size: 14px;" styleClass="input-label" text="Offline (0)" />
                            </HBox>
                            <VBox fx:id="offlinePlayersList" spacing="8" styleClass="player-offline" />
                        </VBox>

                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </VBox>

</StackPane>
