<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.mycompany.clientxo.DifficultyScreenController"
           styleClass="root-container"
           stylesheets="@styles.css">

    

    <!-- Main Content Container -->
    <VBox alignment="CENTER" spacing="30" maxWidth="600">
        <padding>
            <Insets bottom="40" left="40" right="40" top="40" />
        </padding>

        <!-- Title Section -->
        <VBox alignment="CENTER" spacing="8" styleClass="title-section">
            <Label text="Select Difficulty" styleClass="game-title" style="-fx-font-size: 48px;" />
            <Label text="Choose your challenge level" styleClass="game-subtitle" />
        </VBox>

        <!-- Game Card with Buttons -->
        <VBox alignment="CENTER" spacing="16" styleClass="game-card">
            <padding>
                <Insets bottom="32" left="32" right="32" top="32" />
            </padding>

            <!-- Easy Button -->
            <Button onAction="#onEasy" 
                    styleClass="game-button, difficulty-easy"
                    prefWidth="280">
                <graphic>
                    <HBox alignment="CENTER" spacing="10">
                        <!-- Star Icon (Easy) -->
                        <SVGPath content="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" 
                                 styleClass="button-icon" />
                        <Label text="Easy" styleClass="button-label" />
                    </HBox>
                </graphic>
            </Button>

            <!-- Medium Button -->
            <Button onAction="#onMedium" 
                    styleClass="game-button, difficulty-medium"
                    prefWidth="280">
                <graphic>
                    <HBox alignment="CENTER" spacing="10">
                        <!-- Lightning Icon (Medium) -->
                        <SVGPath content="M7 2v11h3v9l7-12h-4l4-8z" 
                                 styleClass="button-icon" />
                        <Label text="Medium" styleClass="button-label" />
                    </HBox>
                </graphic>
            </Button>

            <!-- Hard Button -->
            <Button onAction="#onHard" 
                    styleClass="game-button, difficulty-hard"
                    prefWidth="280">
                <graphic>
                    <HBox alignment="CENTER" spacing="10">
                        <!-- Fire Icon (Hard) -->
                        <SVGPath content="M13.5.67s.74 2.65.74 4.8c0 2.06-1.35 3.73-3.41 3.73-2.07 0-3.63-1.67-3.63-3.73l.03-.36C5.21 7.51 4 10.62 4 14c0 4.42 3.58 8 8 8s8-3.58 8-8C20 8.61 17.41 3.8 13.5.67zM11.71 19c-1.78 0-3.22-1.4-3.22-3.14 0-1.62 1.05-2.76 2.81-3.12 1.77-.36 3.6-1.21 4.62-2.58.39 1.29.59 2.65.59 4.04 0 2.65-2.15 4.8-4.8 4.8z" 
                                 styleClass="button-icon" />
                        <Label text="Hard" styleClass="button-label" />
                    </HBox>
                </graphic>
            </Button>



        </VBox>
    </VBox>

    <!-- Back Button (Top Left) -->
    <Button onAction="#onBack" styleClass="back-button" StackPane.alignment="TOP_LEFT">
        <StackPane.margin>
            <Insets top="16" left="16"/>
        </StackPane.margin>
        <graphic>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <SVGPath content="M19 12H5M12 19l-7-7 7-7" styleClass="back-icon" />
                <Label text="Back" styleClass="back-label"/>
            </HBox>
        </graphic>
    </Button>
</StackPane>
